{
    "requires": {
        "auth": {
            "kind": "jwt-auth"
        },
        "uaa": {
            "kind": "xsuaa"
        },
        "db": {
            "kind": "hana"
        },
        "GraphService": {
            "kind": "rest",
            "credentials": {
                "destination": "Graph2",
                "path": "/graph",
                "forwardAuthToken": true
            },
            "destinationOptions": {
                "selectionStrategy": "alwaysProvider"
            }
        }
    },
    "hana": {
        "deploy-format": "hdbtable"
    }
}